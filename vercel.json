{
  "framework": null,
  "installCommand": "npm install",
  "buildCommand": "npm install papaparse xlsx&&npx turbo build --filter=@erp/frontend&&VITE_ADMIN_BASE=/admin npx turbo build --filter=@erp/admin --force&&cp -r dist ../frontend/dist/admin&&cp ../frontend/dist/index.html ../frontend/dist/404.html",
  "outputDirectory": "../frontend/dist",
  "rewrites": [
    { "source": "/api/:path*", "destination": "https://manufacturing-31gq.onrender.com/api/:path*" },
    { "source": "/admin/(.*)", "destination": "/admin/index.html" },
    { "source": "/((?!api|assets|admin).*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }]
    },
    {
      "source": "/admin/assets/(.*)",
      "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }]
    }
  ]
}
