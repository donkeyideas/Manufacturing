{
  "name": "manufacturing-erp-v3",
  "version": "3.0.0",
  "private": true,
  "description": "Manufacturing ERP Platform v3 â€” Demo-first, Modern Stack",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:frontend": "turbo dev --filter=@erp/frontend",
    "dev:admin": "turbo dev --filter=@erp/admin",
    "dev:backend": "turbo dev --filter=@erp/backend",
    "build": "turbo build",
    "build:demo": "turbo build --filter=@erp/frontend -- --mode demo",
    "test": "turbo test",
    "test:e2e": "playwright test",
    "lint": "turbo lint",
    "clean": "turbo clean",
    "typecheck": "turbo typecheck",
    "postinstall": "node -e \"try{require('fs').copyFileSync('turbo.config.json','turbo.json')}catch(e){}\""
  },
  "dependencies": {
    "papaparse": "^5.5.3",
    "xlsx": "^0.18.5"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.57.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "drizzle-orm": "^0.44.2",
    "prettier": "^3.4.0",
    "turbo": "^2.3.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "packageManager": "npm@11.6.2"
}
