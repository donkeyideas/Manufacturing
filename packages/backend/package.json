{
  "name": "@erp/backend",
  "version": "3.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "esbuild src/index.ts --bundle --platform=node --target=node20 --outfile=dist/index.js --format=esm --external:bcryptjs --external:compression --external:cookie-parser --external:cors --external:dotenv --external:drizzle-orm --external:express --external:helmet --external:jsonwebtoken --external:pg --external:uuid --external:ssh2-sftp-client --external:ssh2 --external:node-forge --external:node-x12 --external:node-cron",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "vitest run",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@erp/shared": "*",
    "bcryptjs": "^3.0.3",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "dotenv": "^17.2.4",
    "drizzle-orm": "^0.44.2",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "node-cron": "^4.2.1",
    "node-forge": "^1.3.3",
    "node-x12": "^1.7.1",
    "pg": "^8.18.0",
    "ssh2-sftp-client": "^12.0.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node-cron": "^3.0.11",
    "@types/node-forge": "^1.3.14",
    "@types/pg": "^8.16.0",
    "@types/ssh2-sftp-client": "^9.0.6",
    "@types/uuid": "^10.0.0",
    "drizzle-kit": "^0.31.9",
    "esbuild": "^0.27.3",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  }
}
